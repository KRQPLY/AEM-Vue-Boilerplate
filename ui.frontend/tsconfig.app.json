{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.json",
    "src/*.vue"
  ],
  "exclude": ["src/**/__test__/*"],
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "$/*": ["./src/*"]
    }
  }
}
